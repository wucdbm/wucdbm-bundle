<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="wucdbm.session.key">session</parameter>
    </parameters>

    <services>

        <!-- Managers -->
        <service id="wucdbm.manager.abstract" class="Wucdbm\Bundle\WucdbmBundle\Manager\AbstractManager" abstract="true">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
        <service id="wucdbm.manager.login" class="Wucdbm\Bundle\WucdbmBundle\Manager\LoginManager"
                 parent="wucdbm.manager.abstract">
        </service>

    </services>
</container>